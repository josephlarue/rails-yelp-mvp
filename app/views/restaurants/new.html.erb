<h1 class="text-center">Add a new restaurant</h1>

<div class="container">

<%= simple_form_for (@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit "Submit Restaurant", class: "btn btn-primary" %>
  <% end %>

<br><br><br>
  <a href="http://localhost:3000/restaurants" class="btn-home" role="button" aria-disabled="true"><p>Home</p></a>

</div>